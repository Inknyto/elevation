body {
    margin: 0;
    height: 100vh;
    background-image: url("Elevation.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    scroll-behavior: smooth;
    font-family: sans-serif;
  }

  .app, #search-engine-wrapper{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
/* Add these styles to your existing style.css or create a new one */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background for the blur effect */
  z-index: 1000; /* Higher z-index to overlay other elements */
}

/* Add this to your CSS file or in your styles object if using inline styles */
.scrollable-text {
  max-height: 40vh; /* Adjust this value based on your design */
  overflow-y: auto;
}

.job-card {
  max-height: 90%;
  max-width: 80%; /* Adjust the maximum width as needed */
  width: 100%;
}

  
  * {
    box-sizing: border-box;
  }
  
 /* #searchInput, */
  textarea {
    width: 70%;
    padding: 10px;
    margin: 5px 0;
    border-radius: 10px;
  }
  
  textarea{
    min-height: 200px;
  }

  #search-engine-wrapper {

  margin: 0 auto; /* Center the container horizontally */
  width: 170vh
  }


/* Add any additional styling as needed */

  #searchInput {
    margin: 10px;
    padding: 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    z-index: 2;
  }
  
  #letterDiv {
    width: 100%;
    max-width: 600px; /* Adjust as needed */
    padding: 20px;
    margin: 10px;
    display: flex;
    flex-direction: row;
    gap: 10px;
  }
  
  .job_result {
    width: 100%;
    max-width: 100vh; /* Adjust as needed */
    margin-bottom: 20px;
  }
  
  .description-button {
    width: 100%;
    max-width: 200px; /* Adjust as needed */
    margin: 25px 0;
  }
  
  /* Add your styles here if needed */
  
  #popup {
    width: 100%;
    max-width: 600px; /* Adjust as needed */
    /* background-color: black; */
    border-radius: 25px;
    padding: 20px;
    border: 15px solid #632c7f;
  }
  
  #blurrer {
    width: 100%;
    height: 100%;
    /* background-color: rgba(0, 0, 0, 0.7); */
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 25px;
  }
  
  #Banner {
    width: 100%;
    max-width: 600px; /* Adjust as needed */
    padding: 20px;
    box-sizing: border-box;
    margin: 20px;
  }
  
  #search-results {
    width: 100%;
    /* background-color: rgba(0, 0, 0, 0.8); */
    padding: 30px;
    border-radius: 5px;
    margin-top: 50px;
    z-index: 1;
    max-height: 80vh; /* Set a maximum height for the result container */
    overflow-y: auto; /* Add vertical scroll if needed */
  }
  
  /* buttons style  */
  
  button {
    width: 100%;
    max-width: 200px; /* Adjust as needed */
    height: 30px;
    font-family: 'Roboto', sans-serif;
    font-size: 15px;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    font-weight: bold;
    color: #28477c;
    background-color: #fff;
    border: none;
    border-radius: 45px;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease 0s;
    cursor: pointer;
    outline: none;
    margin: 5px 0;
  }
  
  button:hover {
    background-color: #632c7f;
    box-shadow: 0px 15px 20px #fff;
    color: #fff;
    transform: translateY(-7px);
  }
  
